<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title: </label>
                <input class="form-control" id="title" type="text" name="campground[title]" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location: </label>
                <input class="form-control" id="location" type="text" name="campground[location]" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <label class="form-label" for="image">Add Images: </label>
            <div class="input-group mb-3">
                <input type="file" class="form-control" name="image" id="" multiple>
            </div>
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image URL: </label>
                <input class="form-control" id="image" type="text" name="campground[image]" required>
                <div class="valid-feedback">Looks good!</div>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="price" required>Price: </label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input id="price" name="campground[price]" type="text" class="form-control" aria-label="price" aria-describedby="price-label" placeholder="0.00" required>
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description: </label>
                <textarea class="form-control" id="description" type="text" name="campground[description]" required></textarea>
            </div>
            
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
            
        </form>

        <footer class="mb-3">
            <a href="/campgrounds">All Campgrounds</a>
        </footer>
    </div>
</div>

